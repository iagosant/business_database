
<%= search_form_for @search do |f| %>
<%= f.condition_fields do |c| %>
<%= render "condition_fields", f: c %>
<% end %>
<p><%= link_to_add_fields "Add conditions", f, :condition %></p>
<div class="actions"><%= f.submit "Search" %></div>
<% end %>

<div class="pagination"><%= will_paginate @businesses %></div>

<table class="striped", "responsive-table">
     <thead>
       <tr>
           <th><%= sort_link @search, :name, "Name" %></th>
           <th><%= sort_link @search, :category_name, "Category name" %></th>
           <th><%= sort_link @search, :phone, "Phone" %></th>
           <th><%= sort_link @search, :email, "Email" %></th>
           <th><%= sort_link @search, :business_address, "Business location" %></th>
       </tr>
     </thead>

    <tbody>
      <% @businesses.each do |b| %>
       <tr>
         <td><%=b.name%></td>
         <td><%=b.category_name%></td>
         <td><%=b.phone%></td>
         <td><%=b.email%></td>
         <td><%=b.business_address%></td>
       </tr>
       <% end %>
     </tbody>
   </table>
